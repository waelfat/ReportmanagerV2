@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid px-4 py-3">
    <div class="row g-4">
        <!-- Sidebar -->
        <aside class="col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h6 class="mb-0">
                        <i class="fas fa-sitemap me-2"></i>Report Categories
                    </h6>
                </div>
                <div class="card-body p-0">
                    @await Component.InvokeAsync("Sidebar")
                </div>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="col-lg-6">
            <div id="ReportContainer" class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-chart-bar text-primary" style="font-size: 4rem; opacity: 0.7;"></i>
                    </div>
                    <h1 class="display-5 fw-bold text-primary mb-3">Welcome to Report Manager</h1>
                    <p class="lead text-muted mb-4">Select a report from the sidebar to get started with data analysis and reporting.</p>
                    <div class="row g-3 text-start">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-play-circle text-success me-3 fs-4"></i>
                                <div>
                                    <h6 class="mb-1">Execute Reports</h6>
                                    <small class="text-muted">Run reports with custom parameters</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-download text-info me-3 fs-4"></i>
                                <div>
                                    <h6 class="mb-1">Export Data</h6>
                                    <small class="text-muted">Download results in various formats</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-history text-warning me-3 fs-4"></i>
                                <div>
                                    <h6 class="mb-1">Execution History</h6>
                                    <small class="text-muted">Track previous report runs</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-cog text-secondary me-3 fs-4"></i>
                                <div>
                                    <h6 class="mb-1">Customizable</h6>
                                    <small class="text-muted">Flexible parameter configuration</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        
        <!-- Right Panel -->
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light border-0">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2 text-primary"></i>Quick Stats
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3 text-center">
                        <div class="col-6">
                            <div class="p-3 bg-primary bg-opacity-10 rounded">
                                <i class="fas fa-file-alt text-primary fs-4 mb-2"></i>
                                <div class="fw-bold">24</div>
                                <small class="text-muted">Reports</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 bg-success bg-opacity-10 rounded">
                                <i class="fas fa-play text-success fs-4 mb-2"></i>
                                <div class="fw-bold">156</div>
                                <small class="text-muted">Executions</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0">
                    <h6 class="mb-0">
                        <i class="fas fa-clock me-2 text-warning"></i>Recent Activity
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="fas fa-check text-success"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-semibold">Sales Report</div>
                            <small class="text-muted">Completed 2 hours ago</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="fas fa-play text-info"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-semibold">Inventory Report</div>
                            <small class="text-muted">Running now</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="fas fa-clock text-warning"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-semibold">Monthly Summary</div>
                            <small class="text-muted">Scheduled for tomorrow</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ExecuteReport.js"></script>
} 
