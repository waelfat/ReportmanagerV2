@using reportmangerv2.Domain

@model DeleteCategoryViewModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <h2 class="text-danger"><i class="fas fa-trash me-2"></i>Delete Category</h2>
    
    <div class="alert alert-danger mt-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Warning!</strong> Are you sure you want to delete this category?
    </div>
    
    <div class="card mt-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-info-circle me-2"></i>Category Details
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3"><i class="fas fa-tag me-2"></i>Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3"><i class="fas fa-folder-tree me-2"></i>Parent Category</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ParentCategoryName))
                    {
                        <span class="badge bg-secondary">@Model.ParentCategoryName</span>
                    }
                    else
                    {
                        <span class="text-muted">Root Category</span>
                    }
                </dd>
                
                <dt class="col-sm-3"><i class="fas fa-file-alt me-2"></i>Reports Count</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info">@Model.ReportsCount</span>
                </dd>
                
                <dt class="col-sm-3"><i class="fas fa-calendar me-2"></i>Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                
                <dt class="col-sm-3"><i class="fas fa-user me-2"></i>Created By</dt>
                <dd class="col-sm-9">@Model.CreatedByUserName</dd>
            </dl>
            
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Category
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
