@model DeleteReportViewModel
@{
    ViewData["Title"] = "Delete Report";
}

<div class="container mt-4">
    <h2 class="text-danger"><i class="fas fa-trash me-2"></i>Delete Report</h2>
    
    <div class="alert alert-danger mt-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Warning!</strong> Are you sure you want to delete this report?
    </div>
    
    <div class="card mt-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-info-circle me-2"></i>Report Details
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3"><i class="fas fa-file-alt me-2"></i>Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3"><i class="fas fa-align-left me-2"></i>Description</dt>
                <dd class="col-sm-9">@(Model.Description ?? "N/A")</dd>
                
                <dt class="col-sm-3"><i class="fas fa-database me-2"></i>Schema</dt>
                <dd class="col-sm-9"><span class="badge bg-info">@Model.SchemaName</span></dd>
                
                <dt class="col-sm-3"><i class="fas fa-folder me-2"></i>Category</dt>
                <dd class="col-sm-9"><span class="badge bg-secondary">@Model.CategoryName</span></dd>
                
                <dt class="col-sm-3"><i class="fas fa-sliders-h me-2"></i>Parameters Count</dt>
                <dd class="col-sm-9"><span class="badge bg-primary">@Model.ParametersCount</span></dd>
                
                <dt class="col-sm-3"><i class="fas fa-calendar me-2"></i>Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
                
                <dt class="col-sm-3"><i class="fas fa-user me-2"></i>Created By</dt>
                <dd class="col-sm-9">@Model.CreatedByUserName</dd>
            </dl>
            
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Report
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
