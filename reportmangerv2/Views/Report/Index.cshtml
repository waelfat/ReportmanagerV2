@model List<ReportViewModel>
@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-alt me-2"></i>Reports</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create Report
        </a>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th class="text-nowrap"><i class="fas fa-file-alt me-2"></i>Name</th>
                                <th class="text-nowrap"><i class="fas fa-align-left me-2"></i>Description</th>
                                <th class="text-nowrap"><i class="fas fa-database me-2"></i>Schema</th>
                                <th class="text-nowrap"><i class="fas fa-folder me-2"></i>Category</th>
                                <th class="text-nowrap"><i class="fas fa-toggle-on me-2"></i>Status</th>
                                <th class="text-nowrap"><i class="fas fa-calendar me-2"></i>Created</th>
                                <th class="text-nowrap"><i class="fas fa-user me-2"></i>Created By</th>
                                <th class="text-nowrap text-center" ><i class="fas fa-cog me-2"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@report.Name</td>
                                    <td>@(report.Description ?? "N/A")</td>
                                    <td><span class="badge bg-info">@report.SchemaName</span></td>
                                    <td><span class="badge bg-secondary">@report.CategoryName</span></td>
                                    <td>
                                        @if (report.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>@report.CreatedDate.ToString("DD/MM/yyyy")</td>
                                    <td>@report.CreatedByUserName</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Edit", new { id = report.Id })" class="btn btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = report.Id })" class="btn btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>No reports found. Create your first report to get started.
        </div>
    }
</div>
