@model DeleteScheduledJobViewModel
@{
    ViewData["Title"] = "Delete Scheduled Job";
}

<div class="container">
    <h2>Delete Scheduled Job</h2>
    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this scheduled job? This action cannot be undone.
    </div>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.ProcedureName</h5>
            <p class="card-text">
                <strong>Description:</strong> @(Model.Description ?? "No description")
            </p>
          
            <p class="card-text">
                <strong>Schedule:</strong> @Model.CronExpression
            </p>
        </div>
    </div>
    
    <div class="mt-3">
        <form asp-action="ConfirmDelete" method="post" style="display: inline;">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this job?')">
                Delete Job
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>