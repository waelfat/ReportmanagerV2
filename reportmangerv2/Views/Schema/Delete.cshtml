@model reportmangerv2.ViewModels.SchemaViewModel
@{
    ViewData["Title"] = "Delete Schema";
}
<div class="container mt-4">
    <h2 class="text-danger"><i class="fas fa-trash me-2"></i>Delete Schema</h2>
    <div class="alert alert-danger mt-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Warning!</strong> Are you sure you want to delete this schema?
    </div>
    <div class="card mt-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-info-circle me-2"></i>Schema Details
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3"><i class="fas fa-tag me-2"></i>Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                <dt class="col-sm-3"><i class="fas fa-align-left me-2"></i>Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
                <dt class="col-sm-3"><i class="fas fa-calendar me-2"></i>Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
            </dl>
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Schema
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>