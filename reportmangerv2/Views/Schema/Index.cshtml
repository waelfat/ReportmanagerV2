@model IEnumerable<reportmangerv2.ViewModels.SchemaViewModel>
@{
    ViewData["Title"] = "Schemas";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-database me-2"></i>Schemas</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create Schema
        </a>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fas fa-tag me-2"></i>Name</th>
                                <th><i class="fas fa-align-left me-2"></i>Description</th>
                                <th><i class="fas fa-calendar me-2"></i>Created At</th>
                                <th class="text-center"><i class="fas fa-cog me-2"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schema in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@schema.Name</td>
                                    <td>@schema.Description</td>
                                    <td>@schema.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Edit", new { id = schema.Id })" class="btn btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Details", new { id = schema.Id })" class="btn btn-outline-info" title="Details">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = schema.Id })" class="btn btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">
            <i class="fas fa-info-circle me-2"></i>No schemas found.
        </div>
    }
</div>