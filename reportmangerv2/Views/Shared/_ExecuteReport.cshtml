@using DocumentFormat.OpenXml.Spreadsheet
@using reportmangerv2.Enums
@using reportmangerv2.ViewModels
@model ExecuteReportViewModel

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        --card-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        --border-radius: 0.75rem;
    }

    .execute-report-card {
        border: none;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.98);
        max-height: 90vh;
        display: flex;
        flex-direction: column;
    }

    .execute-report-card .card-header {
        background: var(--primary-gradient);
        color: white;
        border-radius: var(--border-radius) var(--border-radius) 0 0 !important;
        border: none;
    }

    .execute-report-card .card-body {
        flex: 1;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .execute-params {
        overflow-y: auto;
        max-height: 50vh;
        padding: 1.5rem;
    }

    .form-control,
    .form-select {
        border-radius: 0.5rem;
        border: 1px solid #e0e6ed;
        transition: all 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-primary {
        background: var(--primary-gradient);
        border: none;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(102, 126, 234, 0.3);
    }

    .btn-outline-secondary {
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .executions-table {
        margin-top: 1rem;
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        max-height: 40vh;
        overflow: hidden;
    }

    .executions-table .table-responsive {
        max-height: 35vh;
        overflow-y: auto;
    }

    .executions-table thead th {
        position: sticky;
        top: 0;
        background: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        z-index: 10;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.375rem 0.75rem;
        border-radius: 0.375rem;
    }

    .alert {
        border: none;
        border-radius: 0.5rem;
    }

    .spinner-border-sm {
        width: 1rem;
        height: 1rem;
    }

    .parameter-group {
        background: #f8f9fa;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1rem;
        border-left: 4px solid #667eea;
    }

    .close-btn {
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 50%;
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .close-btn:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: scale(1.1);
    }

    /* Custom scrollbar */
    .execute-params::-webkit-scrollbar,
    .executions-table .table-responsive::-webkit-scrollbar {
        width: 6px;
    }

    .execute-params::-webkit-scrollbar-track,
    .executions-table .table-responsive::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }

    .execute-params::-webkit-scrollbar-thumb,
    .executions-table .table-responsive::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }

    .execute-params::-webkit-scrollbar-thumb:hover,
    .executions-table .table-responsive::-webkit-scrollbar-thumb:hover {
        background: #a8a8a8;
    }
</style>

<div class="execute-report-card card mb-4" id="executeReportCard-@Model.Id">
    <div class="card-header d-flex align-items-center justify-content-between py-3">
        <div class="d-flex align-items-center">
            <i class="fas fa-play-circle fs-4 me-3"></i>
            <div>
                <h5 class="mb-0 fw-bold">@Model.Name</h5>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <small class="opacity-75">@Model.Description</small>
                }
            </div>
        </div>
        <button class="close-btn" type="button" data-bs-dismiss="modal" aria-label="Close">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <div class="card-body p-0">
        <div class="execute-params" id="executeParams-@Model.Id">
            <form id="executeReportForm-@Model.Id" method="post" action="@Url.Action("Execute","Home")"
                class="needs-validation" novalidate>
                <input type="hidden" name="Id" value="@Model.Id" />

                @if (Model.Parameters.Any())
                {
                    <div class="parameter-group">
                        <h6 class="text-primary mb-3">
                            <i class="fas fa-cog me-2"></i>Report Parameters
                        </h6>
                        <div class="row g-3">
                            @for (int i = 0; i < Model.Parameters.Count; i++)
                            {
                                var p = Model.Parameters[i];
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">
                                        @(!string.IsNullOrEmpty(p.DisplayName) ? p.DisplayName : p.Name)
                                        @if (!string.IsNullOrEmpty(p.Description))
                                        {
                                            <i class="fas fa-info-circle text-muted ms-1" title="@p.Description"></i>
                                        }
                                    </label>

                                   
                                    @switch (Model.Parameters[i].ViewControl)
                                    {
                                        case ViewControl.TextBox:
                                            <input class="form-control" name="Parameters[@i].Value" data-IsRequired="@(p.IsRequired.ToString().ToLower())" value="@p.Value"
                                                placeholder="Enter @p.Name.ToLower()" />
                                            break;
                                        case ViewControl.Date:
                                            <input class="form-control" type="date" name="Parameters[@i].Value" data-IsRequired="@(p.IsRequired.ToString().ToLower())" value="@p.Value" />
                                            break;
                                        case ViewControl.CheckBox:
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" name="Parameters[@i].Value" data-IsRequired="@(p.IsRequired.ToString().ToLower())" Parameters[@i].Value"
                                                    value="@p.Value" />
                                                <label class="form-check-label text-muted">Enable this option</label>
                                            </div>
                                            break;
                                        case ViewControl.Select:
                                            <select class="form-select" name="Parameters[@i].Value" data-IsRequired="@(p.IsRequired.ToString().ToLower())"
                                                asp-items="@p.Value.Split(';').Select(c => new SelectListItem { Value = c.Split(',')[0], Text = c.Split(',').Length > 1 ? c.Split(',')[1] : c.Split(',')[0] })">
                                                <option value="">Select an option...</option>
                                            </select>
                                            break;
                                        default:
                                            <input class="form-control" name="Parameters[@i].Value" value="@p.Value" data-IsRequired="@(p.IsRequired.ToString().ToLower())"  />
                                            break;
                                    }

                                    <input type="hidden" name="Parameters[@i].Name" value="@p.Name" />
                                    @if (!string.IsNullOrEmpty(p.Description))
                                    {
                                        <div class="form-text text-muted small">@p.Description</div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-info-circle text-muted fs-2 mb-3"></i>
                        <p class="text-muted">This report doesn't require any parameters.</p>
                    </div>
                }
            </form>

            <div class="mt-3" id="executeResult-@Model.Id" style="display:none;">
                <div class="alert" role="alert"></div>
            </div>
        </div>
    </div>

    <div class="card-footer bg-white d-flex align-items-center justify-content-between py-3">
        <div>
            <button type="submit" form="executeReportForm-@Model.Id" class="btn btn-primary me-2"
                id="executeBtn-@Model.Id">
                <i class="fas fa-play me-2"></i>Execute Report
            </button>
            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#scheduleSection-@Model.Id">
                <i class="fas fa-calendar-alt me-2"></i>Schedule
            </button>
        </div>
        <div id="executeStatus-@Model.Id" class="text-end"></div>
    </div>
    
    <!-- Schedule Section -->
    <div class="collapse" id="scheduleSection-@Model.Id">
        <div class="card-body border-top">
            <h6 class="text-secondary mb-3"><i class="fas fa-clock me-2"></i>Schedule Report Execution</h6>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Select Date & Time</label>
                    <input type="datetime-local" class="form-control" id="scheduleDateTime-@Model.Id">
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Cron Expression</label>
                    <input type="text" class="form-control" id="cronExpression-@Model.Id" readonly>
                    <small class="text-muted" id="cronDescription-@Model.Id"></small>
                </div>
            </div>
            <div class="mt-3">
                <button type="button" class="btn btn-success" id="scheduleBtn-@Model.Id">
                    <i class="fas fa-calendar-check me-2"></i>Schedule Report
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Execution History -->
<div class="executions-table">
    <div class="p-3 bg-light border-bottom">
        <h6 class="mb-0 text-primary">
            <i class="fas fa-history me-2"></i>Execution History
        </h6>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th scope="col"><i class="fas fa-clock me-1"></i>When</th>
                    <th scope="col"><i class="fas fa-info-circle me-1"></i>Status</th>
                    <th scope="col"><i class="fas fa-stopwatch me-1"></i>Duration</th>
                    <th scope="col" class="text-end"><i class="fas fa-cog me-1"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Executions == null || !Model.Executions.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-5">
                            <i class="fas fa-inbox fs-2 mb-3 d-block"></i>
                            No previous executions found for this report.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var exec in Model.Executions)
                    {
                        <tr data-execution-id="@exec.Id">
                            <td class="text-nowrap">
                                <div class="fw-semibold">@exec.ExecutionDate.ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@exec.ExecutionDate.ToString("HH:mm:ss")</small>
                            </td>
                            <td>
                                @switch (exec.Status)
                                {
                                    case "Succeeded":
                                        <span class="badge bg-success"><i class="fas fa-check me-1"></i>@exec.Status</span>
                                        break;
                                    case "Failed":
                                        <span class="badge bg-danger"><i class="fas fa-times me-1"></i>@exec.Status</span>
                                        break;
                                    case "Running":
                                    case "Pending":
                                        <span class="badge bg-warning text-dark"><i
                                                class="fas fa-spinner fa-spin me-1"></i>@exec.Status</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@exec.Status</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (exec.Duration.TotalSeconds > 0)
                                {
                                    <span class="badge bg-light text-dark">
                                        <i class="fas fa-clock me-1"></i>@String.Format("{0}s", (int)exec.Duration.TotalSeconds)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">0s</span>
                                }
                            </td>
                            <td class="text-end">
                                @{
                                    var isActive = ViewBag.ActiveExecutions?.Contains(exec.Id) == true;
                                }
                                <div class="btn-group" role="group">
                                    @if ((exec.Status == "Running" || exec.Status == "Pending") && isActive)
                                    {
                                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                            data-bs-target="#confirmModal" data-execution-id="@exec.Id""> 
                                                      <i class=" fas fa-stop me-1"></i>Cancel
                                        </button>
                                    
                                    }
                                    @if (!string.IsNullOrEmpty(exec.ResultFilePath))
                                    {
                                        <a class="btn btn-sm btn-outline-primary"
                                            href="@Url.Action("DownloadExecutionResult", "Report", new { id = exec.Id })">
                                            <i class="fas fa-download me-1"></i>Download
                                        </a>
                                    }
                                    @if (!((exec.Status == "Running" || exec.Status == "Pending") && isActive))
                                    {
                                        <button class="btn btn-sm btn-outline-danger delete-execution" data-execution-id="@exec.Id">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
