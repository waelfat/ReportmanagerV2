<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Report Manager</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --sidebar-bg: #f8f9fa;
            --card-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            --border-radius: 0.5rem;
        }
        .navbar-brand {
            font-weight: 600;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        .navbar {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95) !important;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        .main-content {
            min-height: calc(100vh - 120px);
        }
        .footer {
            background: var(--sidebar-bg);
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }
    </style>
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand fs-4" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-chart-line me-2"></i>Report Manager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Dashboard
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                            
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-shield me-1"></i>
                                     Admin Panel
                                </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                            <li >
                                <a class="dropdown-item" asp-controller="Report" asp-action="Index">
                                    <i class="fas fa-file-alt me-1"></i>Report Management
                                   
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="User" asp-action="Index">
                                    <i class="fas fa-users me-1"></i>User Management
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Category" asp-action="Index">
                                    <i class="fas fa-sitemap me-1"></i>Category Management
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="ScheduledJob" asp-action="Index">
                                    <i class="fas fa-play me-1"></i>ScheduledJob Management
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Schema" asp-action="Index">
                                    <i class="fas fa-calendar me-2"></i> Schema Management
                                </a>
                            </ul>
                            </li>
                        }   
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header"><i class="fas fa-user me-2"></i>@User.Identity.Name</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user-cog me-2"></i>Profile Settings</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-chart-bar me-2"></i>My Reports</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-history me-2"></i>Execution History</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a></li>
                                </ul>
                            }
                            else
                            {
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>Account
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Login"><i class="fas fa-sign-in-alt me-2"></i>Sign In</a></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Register"><i class="fas fa-user-plus me-2"></i>Create Account</a></li>
                                </ul>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="main-content">
        @RenderBody()
    </div>

    @* <footer class="footer py-4 mt-5">
        <div class="container text-center">
            <div class="text-muted">
                <i class="fas fa-copyright me-1"></i>2026 Report Manager - 
                <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy Policy</a>
            </div>
        </div>
    </footer> *@
    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
